module IdrisUtils.Data.Integer.Sign

%default total

---------------------------------------------------------------------------------------------------
-- [Definition] -----------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------

public export
data Sign : Type where
  Positive : Sign
  Negative : Sign

---------------------------------------------------------------------------------------------------
-- [Operations] -----------------------------------------------------------------------------------
---------------------------------------------------------------------------------------------------

public export
opposite : Sign -> Sign
opposite Negative = Positive
opposite Positive = Negative

public export
(*) : Sign -> Sign -> Sign
(*) Positive s = s
(*) Negative s = opposite s
